{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run",
            "type": "shell",
            "command": "go run main.go",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "env": {
                    "DB_USERNAME": "lpad",
                    "DB_PASSWORD": "qwerty123",
                    "DB_NAME": "launchpad",
                }
            },            
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "go build",
            "problemMatcher": [
                "$go"
            ]
        }
    ]
}
